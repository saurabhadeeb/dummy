<h2>User Page</h2>
<p>
  <%= image_tag @user.avatar.url(:medium) %><br/>
  Name: <%= @user.name %> <br/>
  Email: <%= @user.email_id %>
</p>
<div>
  <p><%= link_to "All Users", users_path %> | 
     <%= link_to "Edit User", edit_user_path(@user) %> | 
     <%= link_to "Delete User", user_path(@user), method: :delete, data: {confirm: "Are you sure you  want to delete this user?"}%>
  </p>
</div>