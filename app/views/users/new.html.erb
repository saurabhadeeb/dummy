<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div>
  <%= form_for @user do |f| %>
  
    <%= f.label :name %>
    <%= f.text_field :name %><br/>
  
    <%= f.label :email_id %>
    <%= f.text_field :email_id %><br/>
  
    <%= f.label :avatar %>
    <%= f.file_field :avatar %><br/>
    
    <%= f.submit "Create User" %>
  <% end %>

</div>